{% set content = text|split('~') %}
<div class="{{ class }}">
    {% if  place_holder  is not empty %}
        {{ place_holder | raw }}
    {% endif %}
    <div class="box-content-wrapper">
        {% if  title is not empty %}
            <h3 class="box-title">{{ title|raw }}</h3>
        {% endif %}
        {% if  content[0] is not empty %}
            <div class="box-content">
                {{ content[0] | raw }}
            </div>
        {% endif %}
        {% if  content[1] is not empty %}
            <a href="javascript:void(0);" data-toggle="tooltip" data-placement="top" title="" data-original-title="{{ content[1] | raw }}">
                <span class="readmore-icon border-radius">+</span></a>
            {% endif %}
    </div>
</div>