{% set classes = [
  'blog-item','modern'
] %}
<div{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}

  <div  class="image-wrapper">
    {% if image %}
      <div {{ image_attributes.addClass('dexp-image') }} >{{ image }}</div>
    {% endif %}
    {% if overlay %}
      <div {{ overlay_attributes.addClass('overlay') }} >
        <div class="overlay-inner">
          {{ overlay }}
        </div>
      </div>
    {% endif %}
  </div>
  {% if dexp_content %}
    <div  {{ dexp_content_attributes.addClass('dexp-content') }} >{{ dexp_content }}</div>
  {% endif %}
  {% if bottom %}
    <div {{ bottom_attributes.addClass('dexp-bottom') }} >
      {{ bottom }}
    </div>
  {% endif %}
</div>
